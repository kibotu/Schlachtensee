<resources>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <!-- splash screen -->

    <style name="AppTheme.App.LaunchScreen" parent="AppTheme"></style>

    <!-- https://material.io/develop/android/components/bottom-navigation-view/ -->

    <style name="AppTheme.BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">65dp</item>
        <item name="android:ellipsize">end</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
</resources>
